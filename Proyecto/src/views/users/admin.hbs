<div class="container p-3">
    <div class="row">
        <div class="col-md-3">
            <div class="card card-body">
                <form action="/users/manager/search" method="POST">
                    <div class="form-group m-2">
                        <input type="email" name="Semail" class="form-control" placeholder="User Email" autofocus>
                    </div>
                    <input type="submit" class="btn btn-success btn-block" name="add_user" value="Search">
                </form>
            </div>
        </div>
        <div class="col-md-9">
        {{#if userData}}
        <div class="row">
            {{#each userData}}
            <form action="/users/manager" method="POST" class="row g-3">
                <div class="col-md-6">
                    <label for="inputName" class="form-label">Name</label>
                    <input type="text" class="form-control" name="name" id="inputName" value="{{name}}" required>
                </div>
                <div class="col-md-6">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input type="email" class="form-control" name="email" id="inputEmail" value="{{email}}" required>
                </div>
                <div class="col-12">
                    <label for="inputAddress" class="form-label">Address</label>
                    <input type="text" class="form-control" name="address" id="inputAddress" value="{{address}}" required>
                </div>
                <div class="col-4">
                    <label for="inputCreate_at" class="form-label">Create_at</label>
                    <input type="text" class="form-control" id="inputCreate_at" value="{{create_at}}" disabled>
                </div>
                <div class="col-md-4">
                    <label for="inputPhone" class="form-label">Phone</label>
                    <input type="tel" class="form-control" name="phone"id="inputPhone" value="{{phone}}">
                </div>
                <div class="col-md-4">
                    <label for="inputState" class="form-label">State</label>
                    <input type="text" class="form-control" name="country" id="inputState" value="{{country}}">
                </div>
                <div class="col-md-4">
                    <div class="form-check">
                        <label class="form-check-label" for="gridCheck">
                            Is Admin
                        </label>
                        {{#if is_seller}}
                            <input class="form-check-input" type="checkbox" name="is_admin" id="gridCheck" checked>
                        {{else}}
                            <input class="form-check-input" type="checkbox" name="is_admin" id="gridCheck">
                        {{/if}}
                        
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-check">
                        <label class="form-check-label" for="gridCheck">
                            Is Seller
                        </label>
                        {{#if is_seller}}
                            <input class="form-check-input" type="checkbox" name="is_seller" id="gridCheck" checked>
                        {{else}}
                            <input class="form-check-input" type="checkbox" name="is_seller" id="gridCheck">
                        {{/if}}
                    </div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Sign in</button>
                </div>
            </form>
            {{/each}}
        </div>
        {{else}}
    <div class="row">
        <div class="col-md-9">
            <table class="table table-bordered">
                    <thead> <!--el encabezado de la tabla-->
                        <tr>
                            <th>id</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Phone Number</th>
                            <th>Created At</th>
                            <th>Admin?</th>
                            <th>Seller?</th>
                            <th>Action</th>
                        </tr>
                </thead>
                <tbody>
                {{#if result}}
                    {{#each result}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                            <td>{{email}}</td>
                            <td>{{country}}</td>
                            <td>{{create_at}}</td>
                            <td>{{is_seller}}</td>
                            <td>{{is_admin}}</td>
                            <td>
                                <a href="/users/manager/edit/{{id}}" class="btn btn-secondary">    <!-- 'href="edit.php?id<\?php $row['id']?>' esto es para pasar o retornar un parametro 'id' del objeto que queremos modificar-->
                                    <i class="fas fa-marker"></i>
                                </a>
                                <a href="/users/manager/{{id}}/delete" class="btn btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    {{/each}} 
                {{else}}
                    {{#each acounts}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                            <td>{{email}}</td>
                            <td>{{country}}</td>
                            <td>{{create_at}}</td>
                            <td>{{is_seller}}</td>
                            <td>{{is_admin}}</td>
                            <td>
                                <a href="/users/manager/edit/{{id}}" class="btn btn-secondary">    <!-- 'href="edit.php?id<\?php $row['id']?>' esto es para pasar o retornar un parametro 'id' del objeto que queremos modificar-->
                                    <i class="fas fa-marker"></i>
                                </a>
                                <a href="/users/manager/{{id}}/delete" class="btn btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    {{/each}} 
                {{/if}}                            
                </tbody>
            </table>
        </div>
        {{/if}}
    </div>
</div>