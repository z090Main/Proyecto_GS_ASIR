
<div class="container p-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    {{#each products_result}}
                    <form action="/product/edit-product/{{id}}" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="{{id}}">
                        <div class="form-group">
                             
                            <input type="text" name='title' class="form-control" placeholder="Title" value="{{title}}" autofocus>
                            {{/each}}
                        </div>
                        <img src="{{#each products_result}}{{path}}{{/each}}" style="width: 50%;">

                        <div class="form-group ">
                            <label for="category">category</label>
                            <select name="category" class="form-control">
                                <option selected>{{#if originalCat}}{{originalCat}}{{else}}Choose...{{/if}} </option>
                                {{#each category}}
                                <option>{{name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        {{#each products_result}}
                        <div class="form-group">
                            <div class="input-group flex-nowrap">
                                <input type="text" name="price" class="form-control" value="{{price}}">
                                <span class="input-group-text">â‚¬</span>
                                <input type="text" name="offers" class="form-control" value="{{offers}}">
                                <span class="input-group-text">%</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <textarea name="description" class="form-control" placeholder="description">{{description}}</textarea>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                Upload
                            </button>
                        </div>
                        {{/each}}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
